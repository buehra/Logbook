{% extends 'base.html.twig' %}

{% block body %}
    <h1>Auf See</h1>
    <table class="table">
        <tbody>
        <tr>
            <th style="width:200px;">Fahrer:</th>
            <td>{{ effective.driver.displayname }}
            </td>
        </tr>
        <tr>
            <th>Boat:</th>
            <td>{{ effective.boat.fullname }}</td>
        </tr>
        <tr>
            <th>Start:</th>
            <td>{{ effective.EffectiveDateFrom|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Ende:</th>
            <td>{{ effective.EffectiveDateTo|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Fahrstunden:</th>
            <td>{{ effective.DrivingHour }}</td>
        </tr>
        <tr>
            <th>Kommentar:</th>
            <td>{{ effective.description }}</td>
        </tr>
        </tbody>
    </table>

    <input id="submitter" type="submit" class="btn btn-default" value="Speichern"/>
    <a href="{{ path('effective_show') }}" class="btn btn-default">Zur√ºck</a>
{% endblock %}
