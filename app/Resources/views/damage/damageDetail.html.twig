{% extends 'base.html.twig' %}

{% block body %}
    <h1>Unfall</h1>
    <table class="table">
        <tbody>
        <tr>
            <th style="width:100px;">Fahrer:</th>
            <td>{{ damage.driver.displayname }}
            </td>
        </tr>
        <tr>
            <th>Boot:</th>
            <td>{{ damage.boat.fullname }}
            </td>
        </tr>
        <tr>
            <th>Datum:</th>
            <td>{{ damage.DamageDate|date('Y-m-d') }}
            </td>
        </tr>
        <tr>
            <th>Ort:</th>
            <td>{{ damage.place }}</td>
        </tr>
        <tr>
            <th>Beschreibung:</th>
            <td>{{ damage.description }}</td>
        </tr>
        <tr>
            <th>Bild:</th>
            <td><a href="" data-toggle="modal" data-target="#showImage">
                    <img style="max-width: 400px; width: 100%;" src="{{ vich_uploader_asset(damage, 'imageFile', 'AppBundle\\Entity\\damage') }}" alt="{{ damage.place }}" />
                </a></td>
        </tr>
        </tbody>
    </table>

    <!-- Modal -->
    <div class="modal fade" id="showImage" role="dialog">
        <div class="modal-dialog modal-lg">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">{{ damage.boat.fullname }}</h4>
                </div>
                <div class="modal-body">
                    <img style="max-width: 5200px; width: 100%;"  src="{{ vich_uploader_asset(damage, 'imageFile', 'AppBundle\\Entity\\damage') }}" alt="{{ damage.place }}" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Schliessen</button>
                </div>
            </div>

        </div>
    </div>

    <a href="{{ path('damage_show') }}" class="btn btn-default">Zur√ºck</a>

{% endblock %}
